<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sear_cheulong.watoumong.Quiz.QuizActivity"
    android:orientation="vertical"
    android:background="@drawable/iphone6">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wat_u_mong_general_information"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/info1"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            app:cardBackgroundColor="@color/yello">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:background="@drawable/img01"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />





            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/info2"
            android:layout_width="185dp"

            android:layout_height="185dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            app:cardBackgroundColor="@color/yello">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:background="@drawable/img02"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />


            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/info3"
            android:layout_width="185dp"

            android:layout_height="185dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            app:cardBackgroundColor="@color/yello">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:background="@drawable/img03"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/info4"

            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            app:cardBackgroundColor="@color/yello">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:background="@drawable/img04"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />


            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>




</LinearLayout>
